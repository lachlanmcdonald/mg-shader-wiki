<!-- {{args}} -->
<table>
	{{#each rows}}
	<tr>
		{{#each this}}
		<td width="{{{@root.width}}}"><img width="100%" src="{{{@root.image_base}}}{{{src}}}" alt="
			{{~#if alt~}}
			{{~alt~}}
			{{~else~}}
				{{~#if value~}}
				Example of a '{{label}}' value of {{value~}}
				{{~else}}{{~/if~}}
			{{~/if~}}
		"></td>
		{{/each}}
	</tr>
	{{#if @root.has_value_label}}
	<tr>
		{{#each this}}
		<th>{{label}}{{#if value}}{{#if label}}: {{/if}}<code>{{value}}</code>{{/if}}</th>
		{{/each}}
	</tr>
	{{/if}}
	{{#if @root.has_text}}
	<tr>
		{{#each this}}
		<td valign="top">{{text}}{{{raw}}}</td>
		{{/each}}
	</tr>
	{{/if}}
	{{/each}}
</table>
<!-- END -->
